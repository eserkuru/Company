
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h4>
        Add a new e-mail address
        <!-- <small>Control panel</small> -->
    </h4>
    <a asp-action="Edit" asp-controller="Customer" asp-area="">
        <i class="fa fa-arrow-circle-left"></i> back to customer edit
    </a>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home" asp-area=""><i class="fa fa-dashboard"></i> Home </a></li>
        <li class="active">
            Customers
        </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- buttons row -->
    <div class="row pad">
        <div class="pull-right">
            <div class="col-xs-12">
                <a asp-action="Edit" asp-controller="Customer" asp-area="" class="btn bg-blue">
                    <i class="fa fa-save"></i>
                    Save
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
        <div class="col-md-12">
            <div class="content">
                <div class="box box-primary">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>Description</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <textarea class="form-control" rows="3" placeholder="Enter ..."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label for="postalCode">Postal code</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <input type="text" class="form-control" id="postalCode" placeholder="Enter postal code">
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>Country</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <select class="form-control">
                                        <option>Turkey</option>
                                        <option>Japan</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>City</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <select class="form-control">
                                        <option>Choose..</option>
                                        <option>Ankara</option>
                                        <option>İstanbul</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>Town</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <select class="form-control">
                                        <option>Choose..</option>
                                        <option>Çankaya</option>
                                        <option>Yenimahalle</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>
                                        Is primary?
                                    </label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <input type="checkbox" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div>
        </div><!-- /.col -->
    </div> <!-- /.row -->
</section><!-- /.content -->