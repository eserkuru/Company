
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h4>
        Edit phone number - Customer Name
        <!-- <small>Control panel</small> -->
    </h4>
    <a asp-action="Edit" asp-controller="Customer" asp-area="">
        <i class="fa fa-arrow-circle-left"></i> back to customer edit
    </a>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home" asp-area=""><i class="fa fa-dashboard"></i> Home </a></li>
        <li class="active">
            Customers
        </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- buttons row -->
    <div class="row pad">
        <div class="pull-right">
            <div class="col-xs-12">
                <a asp-action="Edit" asp-controller="Customer" asp-area="" class="btn bg-blue">
                    <i class="fa fa-save"></i>
                    Save
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
        <div class="col-md-12">
            <div class="content">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>Phone Type</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <select class="form-control">
                                        <option>Choose..</option>
                                        <option>GSM</option>
                                        <option>Land Phone</option>
                                        <option>FAX</option>
                                        <option>PBX</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>Phone Number</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <input type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask />
                                    </div><!-- /.input group -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div>
        </div><!-- /.col -->
    </div> <!-- /.row -->
</section><!-- /.content -->
