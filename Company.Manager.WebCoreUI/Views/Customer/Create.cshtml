
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h4>
        Add a new customer
        <!-- <small>Control panel</small> -->
    </h4>
    <a asp-action="Index" asp-controller="Customer" asp-area="">
        <i class="fa fa-arrow-circle-left"></i> back to customer list
    </a>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home" asp-area="" ><i class="fa fa-dashboard"></i> Home </a></li>
        <li class="active">
            Customers
        </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- buttons row -->
    <div class="row pad">
        <div class="pull-right">
            <div class="col-xs-12">
                <a asp-action="Index" asp-controller="Customer" asp-area="" class="btn bg-blue">
                    <i class="fa fa-save"></i>
                    Save
                </a>
                <a asp-action="Edit" asp-controller="Customer" asp-area="" class="btn bg-blue">
                    <i class="fa fa-save"></i>
                    Save and Continue Edit
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <!-- START CUSTOM TABS -->
    <div class="row">
        <div class="col-md-12">
            <!-- Custom Tabs -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#customerInfo" data-toggle="tab">Customer Info</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="customerInfo">
                        <div class="box box-primary">
                            <div class="box-header">
                                <h3 class="box-title">Tag</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Customer Type</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <select class="form-control">
                                                <option>Person</option>
                                                <option>Company</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="firstName">First name</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="firstName" placeholder="Enter first name">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="lastName">Last name</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="lastName" placeholder="Enter last name">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="company">Company</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="company" placeholder="Enter company">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="taxOffice">Tax office</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="taxOffice" placeholder="Enter tax office">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="taxNumber">Tax number</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="taxNumber" placeholder="Enter tax number">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="nationalityId">Nationality id</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="nationalityId" placeholder="Enter nationality id">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Nationality</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <select class="form-control">
                                                <option>Turkey</option>
                                                <option>Japan</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>
                                                Is active?
                                            </label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="checkbox" checked />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.box-->

                        <div class="box box-primary">
                            <div class="box-header">
                                <h3 class="box-title">Primary contact</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Phone Type</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <select class="form-control">
                                                <option>Choose..</option>
                                                <option>GSM</option>
                                                <option>Land Phone</option>
                                                <option>FAX</option>
                                                <option>PBX</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Phone Number</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-phone"></i>
                                                </div>
                                                <input type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask />
                                            </div><!-- /.input group -->
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>E-mail address</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                <input type="email" class="form-control" placeholder="Email">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.box -->

                        <div class="box box-primary">
                            <div class="box-header">
                                <h3 class="box-title">Primary Address</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Description</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <textarea class="form-control" rows="3" placeholder="Enter ..."></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label for="postalCode">Postal code</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <input type="text" class="form-control" id="postalCode" placeholder="Enter postal code">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Country</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <select class="form-control">
                                                <option>Turkey</option>
                                                <option>Japan</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>City</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <select class="form-control">
                                                <option>Choose..</option>
                                                <option>Ankara</option>
                                                <option>İstanbul</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-inline">
                                    <div class="row">
                                        <div class="col-md-3 text-right">
                                            <label>Town</label>
                                        </div>
                                        <div class="col-md-7 text-left">
                                            <select class="form-control">
                                                <option>Choose..</option>
                                                <option>Çankaya</option>
                                                <option>Yenimahalle</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.tab-pane -->
                </div><!-- /.tab-content -->
            </div><!-- nav-tabs-custom -->
        </div><!-- /.col -->
    </div> <!-- /.row -->
    <!-- END CUSTOM TABS -->
</section><!-- /.content -->
