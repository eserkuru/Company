
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h4>
        Edit country
        <!-- <small>Control panel</small> -->
    </h4>
    <a asp-action="Index" asp-controller="Country" asp-area="">
        <i class="fa fa-arrow-circle-left"></i> back to country list
    </a>
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Home" asp-area=""><i class="fa fa-dashboard"></i> Home </a></li>
        <li class="active">
            Countries
        </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- buttons row -->
    <div class="row pad">
        <div class="pull-right">
            <div class="col-xs-12">
                <a asp-action="Index" asp-controller="Country" asp-area="" class="btn bg-blue">
                    <i class="fa fa-save"></i>
                    Save
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
        <div class="col-md-12">
            <div class="content">
                <div class="box box-primary">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label for="code">Name</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <input type="text" class="form-control" id="name" placeholder="Enter name">
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label for="code">Code</label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <input type="text" class="form-control" id="code" placeholder="Enter code">
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-inline">
                            <div class="row">
                                <div class="col-md-3 text-right">
                                    <label>
                                        Is active?
                                    </label>
                                </div>
                                <div class="col-md-7 text-left">
                                    <input type="checkbox" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div>
        </div><!-- /.col -->
    </div> <!-- /.row -->
</section><!-- /.content -->


