
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@section Styles {
    <!-- DATA TABLES -->
    <link href="~/AdminLTE/css/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Orders
        <!-- <small>Control panel</small> -->
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home"><i class="fa fa-dashboard"></i> Home </a></li>
        <li class="active">Orders</li>
    </ol>

</section>

<!-- Main content -->
<section class="content">

    <!-- buttons row -->
    <div class="row pad">
        <div class="pull-right">
            <div class="col-xs-12">
                <a asp-action="Create" asp-controller="Order" asp-area="" class="btn bg-blue">
                    <i class="fa fa-plus-square"></i>
                    Add New
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-body table-responsive">
                    <table id="orderList" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Customer</th>
                                <th>Created on</th>
                                <th>Order total</th>
                                <th>Order status</th>
                                <th>Payment status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Company Inc.</td>
                                <td>28/02/2019 06:10:08 AM</td>
                                <td><strong>958 ₺</strong></td>
                                <td><span class="btn btn-sm btn-flat btn-warning disabled">Pending</span></td>
                                <td><span class="btn btn-sm btn-flat btn-warning disabled">Pending</span></td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Order" asp-area="" class="btn btn-default">
                                        <i class="fa fa-eye"></i>
                                        View
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>John Doe</td>
                                <td>28/02/2019 06:10:08 AM</td>
                                <td><strong>617 ₺</strong></td>
                                <td><span class="btn btn-sm btn-flat btn-info  disabled">Processing</span></td>
                                <td><span class="btn btn-sm btn-flat btn-success disabled">Paid</span></td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Order" asp-area="" class="btn btn-default">
                                        <i class="fa fa-eye"></i>
                                        View
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>

</section><!-- /.content -->

@section Scripts
    {
    <!-- DATA TABES SCRIPT -->
    <script src="~/AdminLTE/js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/AdminLTE/js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $("#orderList").dataTable(
                {
                    "bLengthChange": false
                });
        });
    </script>
}


